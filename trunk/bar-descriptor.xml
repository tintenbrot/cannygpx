<?xml version='1.0' encoding='utf-8' standalone='no'?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">
    <id>com.example.cannygpx</id>
    <name>CannygGPX</name>
    <versionNumber>1.0.1</versionNumber>
    <description>
        This small application can be used to view Geocaching waypoint files (gpx).
        Thanks to Dimitri Brukakis who builds the icons.
    </description>
    <icon>
        <image>tintenbrot.png</image>
    </icon>
    <splashscreen>
        tintenbrot_splash.png
    </splashscreen>
    <initialWindow>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
        <autoOrients>true</autoOrients>
        <aspectRatio>landscape</aspectRatio>
    </initialWindow>
    <publisher>Daniel Ache</publisher>
    <copyright>Daniel Ache</copyright>
    <env value="app/native/imports" var="QML_IMPORT_PATH"/>
    <env value="app/native/plugins:/usr/lib/qt4/plugins" var="QT_PLUGIN_PATH"/>
    <env value="app/native/lib:/usr/lib/qt4/lib/" var="LD_LIBRARY_PATH"/>
    <arg>-style</arg>
    <arg>qnxlight</arg>
    <action system="true">run_native</action>
    <!-- PROJECTPATH should point to the project binary, path can be relative -->
    <asset path="CannyGPX" type="Qnx/Elf" entry="true">CannyGPX</asset>
<!--
    <asset path="%SRC_DIR%/qml">qml</asset>
-->
    <asset path="qml/MainWindow.qml">qml/MainWindow.qml</asset>
    <asset path="qml/CannyGPX.qml">qml/CannyGPX.qml</asset>
    <asset path="qml/CannyDetails.qml">qml/CannyDetails.qml</asset>
    <asset path="qml/Icons/multi.svg">qml/Icons/multi.svg</asset>
    <asset path="qml/Icons/traditional.svg">qml/Icons/traditional.svg</asset>
    <asset path="qml/Icons/mystery.svg">qml/Icons/mystery.svg</asset>
    <asset path="qml/Icons/earthcache.svg">qml/Icons/earthcache.svg</asset>
    <asset path="qml/Icons/event.svg">qml/Icons/event.svg</asset>
    <asset path="qml/Icons/locationless.svg">qml/Icons/locationless.svg</asset>
    <asset path="qml/Icons/whereigo.svg">qml/Icons/whereigo.svg</asset>
    <asset path="qml/Icons/letterbox.svg">qml/Icons/letterbox.svg</asset>
    <asset path="qml/Icons/mega.svg">qml/Icons/mega.svg</asset>
    <asset path="qml/Icons/webcam.svg">qml/Icons/webcam.svg</asset>
    <asset path="tintenbrot.png">tintenbrot.png</asset>
    <asset path="tintenbrot_splash.png">tintenbrot_splash.png</asset>
    <asset path="assets">assets</asset>

